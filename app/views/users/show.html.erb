<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <h3>Friends</h3>
    <% current_user.friends.each do |people| %>
      <%= link_to people.name, user_path(people.id)  %>
      <%= link_to 'Unfriend', reject_path(user_id: people.id, friend_id: current_user.id), class: 'btn btn-danger', method: :delete %>
    <% end %>
  </article>
</section>
